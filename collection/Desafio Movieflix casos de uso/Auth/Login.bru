meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{host}}/oauth2/token
  body: formUrlEncoded
  auth: basic
}

auth:basic {
  username: {{client-id}}
  password: {{client-secret}}
}

body:form-urlencoded {
  username: {{username}}
  password: {{password}}
  grant_type: password
}

script:post-response {
  if (responseCode.code >= 200 && responseCode.code < 300) {
      var json = res.getBody();
      bru.setEnvVar('token', json.access_token);
  }
}

settings {
  encodeUrl: true
}
